@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<header class="Banner">
    <div class="Banner-content">
        <img src="./logo.svg" alt="logo"/>
        <div>
            <h1 style="font-size: 36px">НАЗВАНИЕ МЕРОПРИЯТИЯ</h1>
            <h3 style="font-size: 24px; font-weight: 80; line-height: 32px">4 МАЯ 2049</h3>
            <h3 style="font-size: 24px; font-weight: 80; line-height: 32px">в самом сердце страны</h3>
        </div>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        <div class="Text-block">
            <div class="Text-Content">
                @Html.Raw(Model.Text)
            </div>
            <div class="Text-Registration">
                <h2>Регистрация</h2>
                <p style="text-align: initial;">Пожалуйста, проверьте правильность введенных данных:</p>
                <div style="display: flex; flex-direction: row; justify-content: flex-start; text-align: initial;">
                    <div>
                        ФИО:<br>
                        Место работы:<br>
                        E-mail:<br>
                    </div>
                    <div style="margin-left: 60px;">
                        Иванов Иван Иванович<br>
                        DIRECTUM<br>
                        ivanov_ii@directum.ru<br>
                    </div>
                </div>
            </div>
        </div>
        <div class="Speakers-block">
            <h1>Наши спикеры</h1>
            <div class="Profiles">
                @for (var i = 0; i < 6; i++)
                {
                    <div class="Profile">
                        <img class="Profile-image" src="./profileImage.png" style="width: 120px;"/>
                        <h2 style="margin-block-end: 0; font-size: 20px; line-height: 27px;">Детектив пикачу</h2>
                        <span style="width: 217px; height: 42px; font-family: Segoe UI; font-size: 16px; line-height: 21px; color: #000000; display: inline-block;">
                            уморительный, остроумный
                            и обаятельный сыщик
                        </span>
                    </div>
                }
            </div>
        </div>
    </main>
</div>

<footer class="footer text-muted">
    <div class="container" style="text-align: center">
        <div style="display: flex; flex-direction: column; justify-content: center; align-content: center; flex-wrap: wrap;">
            <img src="./logo2.png"/>
            <span style="font-size: 12px; line-height: 16px;">© DIRECTUM, 2019</span>
        </div>
    </div>
</footer>